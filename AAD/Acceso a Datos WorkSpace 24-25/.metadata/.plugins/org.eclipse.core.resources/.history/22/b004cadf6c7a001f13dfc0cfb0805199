package file;

import java.io.File;
import java.io.FilenameFilter;
import java.io.IOException;
import java.util.Scanner;

public class fileFilter implements FilenameFilter {

	private String extension;

    // Constructor to initialize the extension
    public void FileFilter(String extension) 
    {
        this.extension = extension.toLowerCase();
    }
    @Override
    public boolean accept(File dir, String name) 
    {
    	Scanner entrada=new Scanner(System.in);
		
    	
        // Filtrar solo archivos que terminen con .exe (ignorando mayúsculas/minúsculas)
        return name.toLowerCase().endsWith(extension);
    }

    public static void main(String[] args) 
    {
    	try {
    		
    		Scanner entrada=new Scanner(System.in);
    		System.out.println("Introduzca la ruta de los archivos");
    		String ruta=entrada.nextLine();
        // Directorio que quieres filtrar
        File directorio = new File(ruta);
      

        // Crear instancia del filtro
        FilenameFilter filtro = new fileFilter();
        System.out.println("Introduzca la extension de los archivos");
		String extension=entrada.nextLine();

        // Obtener lista de archivos filtrados
        String[] archivos = directorio.list(filtro);

        // Mostrar los archivos filtrados
        if (archivos != null && archivos.length > 0) 
        {
            for (String archivo : archivos) 
            {
                System.out.println(archivo);
            }
        } else 
        {
            System.out.println("No se encontraron archivos "+extension);
        }
        entrada.close();
        }catch(Exception e) 
    	{
        	System.out.println("No se encontro la ruta");
    	} 
    	
    {
    }
  
    	
    }
}

